{% extends 'base.html.twig' %}

{% block title %}Profil - {{ app.user.username }}{% endblock %}

{% block body %}
<div class="profil">
    <h1>Bienvenue sur votre profil, {{ app.user.username }} !</h1>

    <div class="profil-details">
        <p><strong>Email :</strong> {{ app.user.email }}</p>
        <p><strong>Date d'inscription :</strong> {{ app.user.createdAt|date('d/m/Y') }}</p>
    </div>

    <div class="actions">
        <a href="{{ path('edit_profile') }}" class="btn btn-primary">Modifier mon profil</a>
        <a href="{{ path('logout') }}" class="btn btn-danger">Se d√©connecter</a>
    </div>
</div>
{% endblock %}
