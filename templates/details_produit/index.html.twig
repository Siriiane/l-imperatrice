{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
	<div class="detail">
		<div class="detail-img">
			<img src="{{ asset('assets/images/' ~ produit.image ) }}" alt="{{produit.description}}">
		</div>
		<div class="example-wrapper">
			<h2 class="product-title">{{produit.nom}}</h2>
			<p class="product-description">{{produit.description}}</p>
			<span class="product-price">{{produit.prix}}
				€</span>
			<a href="#" class="btn-add-to-cart" onclick="addPanier(event,{{produit.id}})">Ajouter au panier</a>
			<p id="message-{{ produit.id }}" style="display: none; color: green;">
				Produit ajouté au panier !
			</p>
		</div>
	</div>
{% endblock %}
